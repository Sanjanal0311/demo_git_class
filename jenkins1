pipeline { 
    agent any
    tools {
        maven 'maven' 
    } 
    stages {
        stage ('git clone'){
            steps {
                git 'https://github.com/varun-polampalli/jenkins-maven.git' 
                            } 
        } 
        stage ('maven compilation') { 
            steps {
                sh "mvn compile"
                } 
        }
        stage ('Testing') {
            steps {
                sh "mvn test" 
                            } 
        }
        stage ('packaging') {
            steps {
                sh "mvn package" 
                        }
                        }
                        }
                        }
